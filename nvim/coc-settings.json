{
  "diagnostic.hintSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.warningSign": "➤",
  "diagnostic.errorSign": "✖",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextLineSeparator": "||",
  "languageserver": {
    "reason": {
      "command": "reason-language-server",
      "filetypes": ["reason"]
    }
  },
  "suggest.removeDuplicateItems": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "graphql"
  ],
  "eslint.enable": true,
  "eslint.autoFixOnSave": false,
  "git.addGBlameToVirtualText": true,
  "yaml.schemas": {
    "kubernetes": "/*.yaml",
    "https://raw.githubusercontent.com/OAI/OpenAPI-Specification/master/schemas/v3.0/schema.json": "/docs/*.yaml"
  }
}
